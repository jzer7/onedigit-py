{
    "editor.fontLigatures": false,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        80,
        100
    ],
    "files.exclude": {
        "**/__pycache__": true,
        "**/.benchmarks": true,
        "**/.coverage": true,
        "**/.DS_Store": true,
        "**/.hypothesis": true,
        "**/.idea": true,
        "**/.mypy_cache": true,
        "**/.pdm-build": true,
        "**/.pdm-python": true,
        "**/.pytest_cache": true,
        "**/.python-version": true,
        "**/.pytype": true,
        "**/.ruff_cache": true,
        "**/.task": true,
        "**/.venv*": true,
        "**/*.db": true,
        "**/*.egg-info": true,
        "**/*.swp": true,
        "**/*.whl": true,
        "**/backups": true,
        "**/build": true,
        "**/celerybeat*": true,
        "**/coverage*": true,
        "**/dist": true,
        "**/htmlcov/[cfksz]*": true,
        "**/pdm.lock": true,
        "**/tags": true,
        "**/uv.lock": true,
    },
    "markdown.validate.enabled": true,
    "markdownlint.config": {
        "default": true,
        "MD012": false,   // Disable: no-multiple-blanks (empty lines improve readability)
        "MD022": false,   // Disable: blank-around-heading
        "MD029": false,   // Disable: Ordered list item prefix
        "MD033": false,   // Disable: no-inline HTML (needed to use "<br>" over trailing spaces)
    },
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
    },
    "python.analysis.typeCheckingMode": "standard",
    "python.linting.enabled": true,
    "python.terminal.shellIntegration.enabled": true,
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "ruff.organizeImports": true,
    "[yaml]": {
        "editor.autoIndent": "advanced"
    },
    "yaml.format.bracketSpacing": false,
    "yaml.format.enable": true,
}
